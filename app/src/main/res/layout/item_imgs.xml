<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardElevation="4dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_imgs_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_bg_color_img_item"
            android:padding="3dp">

            <TextView
                android:id="@+id/item_imgs_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLength="20"
                android:maxLines="2"
                android:padding="5dp"
                android:textColor="@color/text_color_img_item"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_below="@id/item_imgs_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                >

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icon_img_size" />

                <TextView
                    android:id="@+id/item_imgs_tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLength="10"
                    android:textColor="@color/text_color_img_item"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/item_imgs"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icon_visitor_count" />


                <TextView
                    android:id="@+id/item_imgs_tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLength="10"
                    android:textColor="@color/text_color_img_item"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>